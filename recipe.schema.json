{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XSArena Recipe (RunSpecV2 subset)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "subject": { "type": "string", "minLength": 3 },
    "length":  { "type": "string", "enum": ["standard","long","very-long","max"] },
    "span":    { "type": "string", "enum": ["medium","long","book"] },
    "overlays": {
      "type": "array", "items": { "type": "string" }
    },
    "extra_files": {
      "type": "array", "items": { "type": "string" }
    },
    "generate_plan": { "type": "boolean" },
    "out_path": { "type": "string" }
  },
  "required": ["subject"]
}
